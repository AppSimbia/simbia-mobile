<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- HomeFragment -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <!-- Ação para abrir ProfileConfig -->
        <action
            android:id="@+id/action_home_to_profile_config"
            app:destination="@id/navigation_profile_config" />
    </fragment>

    <!-- ProfileConfigFragment -->
    <fragment
        android:id="@+id/navigation_profile_config"
        android:name="com.germinare.simbia_mobile.ui.features.profile.fragments.ProfileConfig"
        android:label="Profile Config"
        tools:layout="@layout/fragment_profile_config" />

    <!-- Outros fragments do Home/BottomNavigation -->
    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.feed.FeedFragment"
        android:label="Feed"
        tools:layout="@layout/fragment_feed" />

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.post.PostFragment"
        android:label="Post"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.chat.ChatInitialFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat_initial" />

    <fragment
        android:id="@+id/navigation_eva"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.eva.EvaFragment"
        android:label="Eva"
        tools:layout="@layout/fragment_eva" />

    <fragment
        android:id="@+id/navigation_eva_messages"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.eva.EvaMessagesFragment"
        android:label="Eva Messages"
        tools:layout="@layout/fragment_eva_messages" />

    <fragment
        android:id="@+id/navigation_chat_messages"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.chat.ChatMessagesFragment"
        android:label="Chat Messages"
        tools:layout="@layout/fragment_chat_messages" />

</navigation>
