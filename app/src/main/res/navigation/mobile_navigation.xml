<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_legalGuideFragment"
            app:destination="@id/navigation_legal_guide" />
        <action
            android:id="@+id/action_navigation_home_to_challengesFragment"
            app:destination="@id/navigation_challenges" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_impacts"
            app:destination="@id/navigation_impacts" />

    </fragment>
    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.feed.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" />
    <fragment
        android:id="@+id/navigation_post"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.post.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.chat.ChatInitialFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat_initial" />
    <fragment
        android:id="@+id/navigation_eva"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.eva.EvaFragment"
        android:label="fragment_eva"
        tools:layout="@layout/fragment_eva" />
    <fragment
        android:id="@+id/navigation_eva_messages"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.eva.EvaMessagesFragment"
        android:label="fragment_eva_messages"
        tools:layout="@layout/fragment_eva_messages" />

    <fragment
        android:id="@+id/navigation_chat_messages"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.chat.ChatMessagesFragment"
        android:label="fragment_chat_messages"
        tools:layout="@layout/fragment_chat_messages" />
    <fragment
        android:id="@+id/navigation_product_details"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.feed.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" />
    <fragment
        android:id="@+id/navigation_impacts"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.impacts.ImpactsFragment"
        android:label="fragment_impacts"
        tools:layout="@layout/fragment_impacts" />
    <fragment
        android:id="@+id/navigation_legal_guide"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.legalGuide.LegalGuideFragment"
        android:label="fragment_legal_guide"
        tools:layout="@layout/fragment_legal_guide" >
    </fragment>
    <fragment
        android:id="@+id/navigation_challenges"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.challenges.ChallengesFragment"
        android:label="fragment_challenges"
        tools:layout="@layout/fragment_challenges" />
    <fragment
        android:id="@+id/challengeDetailsFragment"
        android:name="com.germinare.simbia_mobile.ui.features.home.fragments.challenges.ChallengeDetailsFragment"
        android:label="fragment_challenge_details"
        tools:layout="@layout/fragment_challenge_details" />

</navigation>